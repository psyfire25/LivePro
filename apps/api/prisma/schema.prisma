// apps/api/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventType {
  CLUB_NIGHT
  CONCERT
  FESTIVAL
  CONFERENCE
  PRIVATE
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  BLOCKED
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum ScheduleKind {
  DOORS
  PERFORMANCE
  CHANGEOVER
  CURFEW
  NOTE
}

enum NotificationType {
  SCHEDULE_CHANGE
  TASK_ASSIGNED
  TASK_COMPLETED
  TASK_STATUS_CHANGE
  CREW_ASSIGNMENT
  EVENT_CREATED
  EVENT_UPDATED
  DEADLINE_APPROACHING
  SYSTEM_ALERT
}

enum NotificationSeverity {
  INFO
  SUCCESS
  WARNING
  ERROR
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  role          String         @default("member")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  notifications Notification[]
  pushSubscriptions PushSubscription[]
  shifts Shift[]
}

model Event {
  id            String           @id @default(cuid())
  name          String
  type          EventType
  startAt       DateTime
  endAt         DateTime
  location      String?
  workspaceId   String?
  workspace     Workspace?      @relation(fields: [workspaceId], references: [id])
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  stages        Stage[]
  tasks         Task[]
  scheduleItems ScheduleItem[]
  crews         CrewAssignment[]
  supplierLinks SupplierLink[]
  notifications Notification[]
  shifts        Shift[]
  staffingRequests StaffingRequest[]
}

model Stage {
  id      String         @id @default(cuid())
  eventId String
  event   Event          @relation(fields: [eventId], references: [id], onDelete: Cascade)
  name    String
  notes   String?
  tasks   Task[]
  items   ScheduleItem[]
}

model Contact {
  id       String           @id @default(cuid())
  name     String
  email    String?
  phone    String?
  org      String?
  crews    CrewAssignment[]
  tasks    Task[]           @relation("TaskAssignee")
  supplier Supplier?
}

model Supplier {
  id        String         @id @default(cuid())
  name      String
  category  String?
  contactId String?        @unique
  contact   Contact?       @relation(fields: [contactId], references: [id])
  links     SupplierLink[]
  notes     String?
}

model CrewAssignment {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  contactId String?
  contact   Contact? @relation(fields: [contactId], references: [id])
  role      String
  notes     String?
}

model SupplierLink {
  id         String   @id @default(cuid())
  eventId    String
  event      Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  supplierId String
  supplier   Supplier @relation(fields: [supplierId], references: [id])
  role       String?
  notes      String?
}

model Task {
  id            String         @id @default(cuid())
  eventId       String
  event         Event          @relation(fields: [eventId], references: [id], onDelete: Cascade)
  stageId       String?
  stage         Stage?         @relation(fields: [stageId], references: [id])
  title         String
  description   String?
  status        TaskStatus     @default(TODO)
  priority      TaskPriority   @default(MEDIUM)
  dueAt         DateTime?
  assigneeId    String?
  assignee      Contact?       @relation("TaskAssignee", fields: [assigneeId], references: [id])
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  notifications Notification[]
}

model ScheduleItem {
  id      String       @id @default(cuid())
  eventId String
  event   Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  stageId String?
  stage   Stage?       @relation(fields: [stageId], references: [id])
  title   String
  kind    ScheduleKind
  startAt DateTime
  endAt   DateTime
  notes   String?
  artist  String?
}

// Subscription & access models
enum ModuleName {
  PRODUCTION
  STAFFING
  TALENT
  FINANCE
  DOCS
}

model Workspace {
  id            String               @id @default(cuid())
  name          String
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  members       WorkspaceMember[]
  entitlements  ModuleEntitlement[]
  events        Event[]
  notifications Notification[]
}

enum WorkspaceRole {
  DIRECTOR
  MANAGER
  LEAD
  STAFF
}

model WorkspaceMember {
  id          String        @id @default(cuid())
  workspaceId String
  workspace   Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  userId      String
  role        WorkspaceRole @default(STAFF)
  createdAt   DateTime      @default(now())
  @@unique([workspaceId, userId])
}

model ModuleEntitlement {
  id          String      @id @default(cuid())
  workspaceId String
  workspace   Workspace   @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  module      ModuleName
  plan        String? // e.g., free, pro
  status      String   @default("active") // active, canceled, trialing
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  @@unique([workspaceId, module])
}

model Notification {
  id          String               @id @default(cuid())
  
  // Recipient
  userId      String
  user        User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Content
  type        NotificationType
  severity    NotificationSeverity @default(INFO)
  title       String
  message     String
  actionUrl   String?              // Deep link to relevant resource
  
  // Context (optional relations)
  workspaceId String?
  eventId     String?
  taskId      String?
  
  // Metadata
  metadata    Json?                // Flexible data for different notification types
  
  // Status
  read        Boolean              @default(false)
  readAt      DateTime?
  archived    Boolean              @default(false)
  
  // Timestamps
  createdAt   DateTime             @default(now())
  expiresAt   DateTime?            // Optional auto-cleanup for old notifications
  
  // Relations
  workspace   Workspace?           @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  event       Event?               @relation(fields: [eventId], references: [id], onDelete: Cascade)
  task        Task?                @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  @@index([userId, read, createdAt])
  @@index([userId, archived])
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Shift {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventId   String?
  event     Event?   @relation(fields: [eventId], references: [id], onDelete: SetNull)
  startAt   DateTime
  endAt     DateTime
  role      String
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([eventId])
}

model StaffingRequest {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  role      String
  quantity  Int
  status    String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([eventId])
}
